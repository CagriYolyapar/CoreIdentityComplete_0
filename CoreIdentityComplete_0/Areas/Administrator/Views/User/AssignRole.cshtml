@model AssignRolePageVM

<form asp-action="AssignRole" asp-controller="User" method="post" class="p-3 w-75 m-auto">
    <input type="hidden" asp-for="UserID" />

    <div class="list-group">

        @for (int i = 0; i < Model.Roles.Count; i++)
        {
              
                <input type="hidden" asp-for="@Model.Roles[i].RoleName" />

                <label>
                    <input class="form-check-input me-1" asp-for="@Model.Roles[i].IsChecked" /> @Model.Roles[i].RoleName
                </label>
        }
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Kaydet</button>
    </div>
</form>