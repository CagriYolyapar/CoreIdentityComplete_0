@model CreateUserRequestModel

<form asp-controller="User" asp-action="Create" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label>Kullanıcı ismini giriniz</label>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <input asp-for="UserName" class="form-control"/>
    </div>

    <div class="mb-3">
        <label>Kullanıcı emailini giriniz</label>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary"> Kullanıcı ekle</button>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">

    </div>
</form>